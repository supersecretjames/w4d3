<h1><%= @cat.name %></h1>

<p>Age: <%= @cat.age %><br/>
Birth Date: <%= @cat.birth_date %><br/>
Color: <%= @cat.color.color %><br/>
Location: <%= @cat.location.name %><br/>
  Gender:
  <% if @cat.sex == 0 %>
    <%= "Male" %>
  <% else %>
    <%= "Female" %>
  <% end %>
</p>
<form action="/rental_request" method="post">
  <label for "cat_id">Cat ID #:</label>
  <input name = "rental_request[cat_id]" id = "cat_id" type = "number"><br />

  <label for "start_date">Start Date:</label>
  <input name = "rental_request[start_date]" id = "start_date" type = "text"><br/>
  <label for "end_date">End Date:</label>
  <input name = "rental_request[end_date]" id = "end_date" type = "text"><br/>
  <input type = "submit" value = "Submit Rental Request">
</form>